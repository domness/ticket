%h1= @project.name

= link_to 'New Item', new_project_item_path(@project), class: 'btn btn-primary'

.row#project-items

  .col-sm-4
    %h2.text-center Backlog

    %ul#items
      - @project.items.backlog.each do |item|
        %li{ class: "item #{item.item_type}" }
          = render 'items/item', project: @project, item: item, show: false

  .col-sm-4
    %h2.text-center Current

    %ul#items
      - @project.items.current.each do |item|
        = link_to project_item_path(@project, item) do
          %li{ class: "item #{item.item_type}" }
            = render 'items/item', project: @project, item: item, show: false

  .col-sm-4
    %h2.text-center Complete

    %ul#items
      - @project.items.completed.each do |item|
        %li{ class: "item #{item.item_type}" }
          = render 'items/item', project: @project, item: item, show: false
