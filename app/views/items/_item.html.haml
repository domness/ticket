%li{ class: item.item_type }
  .status
    .buttons.pull-right
      = item_buttons(project, item)
    %span.score= item.human_score
    %span= item.assigned_to
    .clearfix
  %span.as As a
  %span.who= item.who
  %span.i-want I want
  %span.what= item.what
  %span.so-that so that
  %span.why= item.why
  .links
    .pull-right
      = link_to 'Edit', edit_project_item_path(project, item), class: 'btn btn-sm btn-default'
      = link_to 'Delete', project_item_path(project, item), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }
  .number
    = "##{item.number}"
  .clearfix
